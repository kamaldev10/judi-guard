{
  "version": 2,
  "builds": [
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "packages/backend/src/app.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/packages/backend/src/app.js"
    },
    {
      "source": "/:path((?!api/|.*\\..*).*)",
      "destination": "/packages/frontend/index.html"
    }
  ]
}
